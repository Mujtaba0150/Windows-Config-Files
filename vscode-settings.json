{
    // Editor Configuration
    "editor.formatOnType": false,
    "editor.formatOnPaste": true,
    "editor.formatOnSave": true,
    "editor.minimap.enabled": false,
    "editor.snippetSuggestions": "top",
    "editor.linkedEditing": true,
    "editor.fontFamily": "Cascadia Code, 'Consolas', monospace",
    "editor.fontLigatures": true,
    "editor.guides.highlightActiveIndentation": "always",
    "editor.indentSize": "tabSize",
    "editor.tabSize": 4,
    // C/C++ Extension Configuration
    "C_Cpp.default.cppStandard": "c++20",
    "C_Cpp.default.compilerPath": "D:/Apps/MSYS2/ucrt64/bin/g++.exe",
    "C_Cpp.formatting": "vcFormat",
    "C_Cpp.autocompleteAddParentheses": true,
    "C_Cpp.intelliSenseUpdateDelay": 500,
    "C_Cpp.vcFormat": {
        "indent": {
            "caseLabels": true,
            "accessSpecifiers": false
        },
        "newLine": {
            "beforeOpenBrace": {
                "block": "sameLine",
                "function": "sameLine",
                "lambda": "sameLine",
                "namespace": "sameLine",
                "type": "sameLine"
            },
            "beforeWhileInDoWhile": true,
            "beforeElse": true
        },
        "space": {
            "aroundAssignmentOperator": "insert",
            "afterComma": true,
            "beforeBlockOpenBrace": true,
            "beforeFunctionOpenParenthesis": "remove",
            "beforeOpenBrace": false,
            "removeBeforeSemicolon": true,
            "afterKeywordsInControlFlowStatements": false,
            "betweenEmptyBraces": false,
            "betweenEmptySquareBrackets": false,
            "betweenEmptyParameterListParentheses": false,
            "withinSquareBrackets": false,
            "withinCastParentheses": false,
            "withinInitializerListBraces": false,
            "withinLambdaBrackets": false,
            "withinParameterListParentheses": false
        }
    },
    // Terminal Settings
    "terminal.integrated.profiles.windows": {
        "PowerShell 7": {
            "path": "D:/Apps/Powershell 7.0/7/pwsh.exe",
            "args": [
                "-NoExit",
                "-Command",
                "Set-PSReadLineOption -HistorySaveStyle SaveNothing"
            ],
            "icon": "terminal-powershell"
        }
    },
    "terminal.integrated.defaultProfile.windows": "PowerShell 7",
    // Workbench Appearance
    "workbench.startupEditor": "none",
    "workbench.colorTheme": "Visual Studio Dark",
    "workbench.sideBar.location": "right",
    "workbench.activityBar.location": "top",
    "workbench.editorAssociations": {
        "git-rebase-todo": "default"
    },
    "workbench.settings.applyToAllProfiles": [
        "inline-bookmarks.default.words.red"
    ],
    // Git and GitLens Settings
    "git.autofetch": true,
    "git.openRepositoryInParentFolders": "always",
    "git.confirmSync": false,
    "gitlens.ai.experimental.model": "openai:gpt-4o",
    "gitlens.views.scm.grouped.views": {
        "commits": true,
        "branches": true,
        "remotes": true,
        "stashes": true,
        "tags": true,
        "worktrees": true,
        "contributors": true,
        "repositories": false,
        "searchAndCompare": true,
        "launchpad": false
    },
    // File Handling
    "files.autoSave": "afterDelay",
    "files.trimFinalNewlines": true,
    "diffEditor.ignoreTrimWhitespace": false,
    // Live Server
    "liveServer.settings.donotVerifyTags": true,
    // Python
    "python.createEnvironment.trigger": "off",
    // Dart/Flutter
    "dart.openDevTools": "flutter",
    // VS Code Edge DevTools
    "vscode-edge-devtools.webhintInstallNotification": true,
    "vscode-edge-devtools.headless": true,
    // CMake Tools
    "cmake.pinnedCommands": [
        "workbench.action.tasks.configureTaskRunner",
        "workbench.action.tasks.runTask"
    ],
    "cmake.showOptionsMovedNotification": false,
    "cmake.showConfigureWithDebuggerNotification": false,
    "cmake.configureOnOpen": false,
    // Better Comments Plugin
    "better-comments.tags": [
        {
            "tag": "!",
            "color": "#FF2D00",
            "strikethrough": false,
            "underline": false,
            "backgroundColor": "transparent",
            "bold": false,
            "italic": false
        },
        {
            "tag": "?",
            "color": "#3498DB",
            "strikethrough": false,
            "underline": false,
            "backgroundColor": "transparent",
            "bold": false,
            "italic": false
        },
        {
            "tag": "//",
            "color": "#474747",
            "strikethrough": true,
            "underline": false,
            "backgroundColor": "transparent",
            "bold": false,
            "italic": false
        },
        {
            "tag": "todo",
            "color": "#FF8C00",
            "strikethrough": false,
            "underline": false,
            "backgroundColor": "transparent",
            "bold": false,
            "italic": false
        },
        {
            "tag": "*",
            "color": "#98C379",
            "strikethrough": false,
            "underline": false,
            "backgroundColor": "transparent",
            "bold": false,
            "italic": false
        }
    ],
    // VSCode Kanata
    "vscode-kanata.localKeysVariant": "deflocalkeys-win",
    "editor.wordWrap": "on",
    "diffEditor.wordWrap": "on",
    "editor.wordWrapColumn": 1,
    "dart.debugExternalPackageLibraries": false,
    "dart.debugSdkLibraries": false,
    "workbench.panel.showLabels": false,
    "terminal.integrated.smoothScrolling": true,
    // Inline Bookmarks
    "inline-bookmarks.default.words.red": "!:",
    "inline-bookmarks.expert.custom.styles": {
        "red": {
            "gutterIconColor": "#FF2D00"
        }
    },
    "python.defaultInterpreterPath": "c:\\Users\\mujta\\AppData\\Local\\Programs\\Python\\Python313\\python.exe",
}